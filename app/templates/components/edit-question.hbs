{{#if editQuestionForm }}
<form>
  <div class="form-group">
    <label for="author">Author</label>
    {{input value=author id='author' placeholder=question.author}}
  </div>
  <div class="form-group">
    <label for="title">Title</label>
    {{input value=title id="title" placeholder=question.title}}
  </div>
  <div class="form-group">
    <label for="content">Content</label>
    {{textarea value=content id="content" placeholder=question.content}}
  </div>
  <button{{action 'edit' question}} >Save</button>
</form>
{{else}}
<button{{action 'editQuestionForm'}} >Edit Question</button>
{{/if}}