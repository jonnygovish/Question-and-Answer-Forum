{{#if addNewAnswer}}
<form>
  <div class="form-group">
    <label for="author1">Author:</label>
    {{input value=author1 id="author1" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="answer">Answer</label>
    {{textarea rows=3 value=answer id="answer" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="date">Date</label>
    {{input value=date type="date" id="date" class="form-control"}}
  </div>
  <button class="btn btn-info btn-lg btn-block" {{action 'saveAnswer'}}>Post</button>
</form>
{{else}}
<div>
  <button{{action 'showAnswerForm'}} class="btn btn-info btn-answer" >New Answer</button>
</div>
{{/if}}