{{#if addNewQuestion}}
<h1>New Question</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="owner" class="edit-field"}}
    </div>
    
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" class="edit-field"}}
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      {{textarea value=content id="content" class="edit-field"}}
    </div>
    <button{{action 'saveQuestion'}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'questionFormShow'}} >New question</button>
{{/if}}